@model Vendas.Models.Cadastro.EmpresaModel

@{
    ViewData["title"] = "Cadastrar Empresa";
}
<div class="mb-5 text-center">
    <h1 class="text-dark"> Cadastro de Empresa</h1>
</div>

<div class="container bg-secondary bg-opacity-10 p-5 rounded-5">

    <form method="post" asp-controller="Empresa" asp-action="Cadastrar">
       
        <div class="mb-3  text-black">
            <label for="Nome">Nome</label>
            <input type="text" class="form-control" maxlength="40" asp-for="Nome" id="Nome" placeholder="Nome">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
              
        <div class="form-group">
            <label asp-for="Dtcadastro" class="control-label"></label>
            <input type="text" class="form-control" maxlength="40" asp-for="Dtcadastro" id="datepicker" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
            <span class="text-danger" asp-validation-for="Dtcadastro"></span>
        </div>
        @section Scripts
        {
            <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
            <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
            <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
            <script>
                $(function () {
                    $("#datepicker").datepicker();
                });
            </script>
        }

        <div class="mb-3  text-black">
            <label for="Endereco">Endereco</label>
            <input type="text" class="form-control" maxlength="40" asp-for="Endereco" id="Endereco" placeholder="Endereco">
            <span class="text-danger" asp-validation-for="Endereco"></span>
        </div>

        <div class="mb-3  text-black">
            <label for="Numero">Numero</label>
            <input type="text" class="form-control" maxlength="40" asp-for="Numero" id="Numero" placeholder="Numero">
            <span class="text-danger" asp-validation-for="Numero"></span>
        </div>

        <div class="mb-3  text-black">
            <label for="Complemento">Complemento</label>
            <input type="text" class="form-control" maxlength="40" asp-for="Complemento" id="Complemento" placeholder="Complemento">
            <span class="text-danger" asp-validation-for="Complemento"></span>
        </div>

        <div class="mb-3  text-black">
            <label for="Bairro">Bairro</label>
            <input type="text" class="form-control" maxlength="40" asp-for="Bairro" id="Bairro" placeholder="Bairro">
            <span class="text-danger" asp-validation-for="Bairro"></span>
        </div>

        <div class="mb-3  text-black">
