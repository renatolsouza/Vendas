            <span class="text-danger" asp-validation-for="Idmunicipio"></span>
        </div>

        <div class="mb-3  text-black">
            <label for="Idpais">Idpais</label>
           @*  <input type="text" class="form-control" maxlength="40" asp-for="Idpais" id="Idpais" placeholder="Idpais"> *@

            <select name="ddlPais">
                <option>2010</option>
                <option>2011</option>
                <option>2012</option>
                <option>2013</option>
                <option>2014</option>
                <option>2015</option>
            </select>

            <span class="text-danger" asp-validation-for="Idpais"></span>
        </div>

        <div class="mb-3  text-black">
            <label for="Idestado">Idestado</label>
            <input type="text" class="form-control" maxlength="40" asp-for="Idestado" id="Idestado" placeholder="Idestado">
