@using Vendas.DTOs
@using Vendas.Models.Cadastro;

@* @model IEnumerable<CidadeModel>; *@
@model List<CidadeDto>;


<div class="Conteiner">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Cidade</h1>
        <a class="btn btn-secondary mx-2" asp-controller="Cidade" asp-action="Cadastrar">Cadastrar novo Ítem</a>


    </div>

   
    <div class="container bg-secondary bg-opacity-10 p-5 rounded-5">

        <table id="Cidades" class="table table-bordered bg-secondary bg-opacity-10 ">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">UF</th>
                    <th scope="col">IBGE</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @if(Model != null)
                {
                    @foreach(var cidade in Model)
                    {
                        <tr>
                           
                            <td>@cidade.NOME</td>
                            <td>@cidade.NOMEUF</td>
                            <td>@cidade.IBGE</td>
                            <td>
                                <a asp-controller="Cidade" asp-action="Editar" asp-route-id="@cidade.IDCIDADE" class="btn btn-warning mx-3">Editar</a>
                                <a asp-controller="Cidade" asp-action="Excluir" asp-route-id="@cidade.IDCIDADE" class="btn btn-danger mx-3">Excluir</a>
                            </td>
                        </tr>
                    }
                }
        
            </tbody>
        </table>

    </div>

</div>
